---
import Layout from '../layouts/Layout.astro';
import { getCollection } from 'astro:content';

// Get base URL for links (handles GitHub Pages subdirectory)
const baseUrl = import.meta.env.BASE_URL;

/**
 * Get the current signature (only one should be marked current: true)
 * Throws an error if multiple signatures are marked as current
 */
async function getCurrentSignature() {
  const allSignatures = await getCollection('signatures');
  const currentSignatures = allSignatures.filter(sig => sig.data.current === true);
  
  if (currentSignatures.length === 0) {
    return null; // No current signature set
  }
  
  if (currentSignatures.length > 1) {
    const signatureNames = currentSignatures.map(sig => sig.slug).join(', ');
    throw new Error(
      `Multiple signatures are marked as current: ${signatureNames}. ` +
      `Only one signature should have current: true.`
    );
  }
  
  return currentSignatures[0];
}

/**
 * Get the URL slug for a post
 * Uses custom urlSlug from frontmatter if provided, otherwise generates from title
 */
function getPostSlug(post) {
  if (post.data.urlSlug) {
    return post.data.urlSlug;
  }
  // Generate slug from title
  const title = post.data.title || post.slug;
  return title
    .toLowerCase()
    .trim()
    .replace(/[\s_]+/g, '-')
    .replace(/[^a-z0-9-]/g, '')
    .replace(/-+/g, '-')
    .replace(/^-+|-+$/g, '');
}

// Get all blog posts, filter to only published ones (explicitly check for true or undefined/not set)
const allPostsCollection = await getCollection('blog');
const publishedPosts = allPostsCollection.filter(post => {
  const isPublished = post.data.published === true || post.data.published === undefined;
  return isPublished;
});

// Sort by date (newest first)
publishedPosts.sort((a, b) => {
  const dateA = new Date(a.data.date || 0);
  const dateB = new Date(b.data.date || 0);
  return dateB.getTime() - dateA.getTime();
});

// Latest post is the first one
const latestPost = publishedPosts[0];
const allPosts = publishedPosts; // Show all published posts in sidebar

// Render the latest post content
let LatestPostContent = null;
if (latestPost) {
  const rendered = await latestPost.render();
  LatestPostContent = rendered.Content;
}

// Get current signature
let currentSignature = null;
let SignatureContent = null;
try {
  currentSignature = await getCurrentSignature();
  if (currentSignature) {
    const { Content: SigContent } = await currentSignature.render();
    SignatureContent = SigContent;
  } else {
    console.log('No current signature found');
  }
} catch (error) {
  console.error('Error loading signature:', error);
  // Continue without signature if there's an error
}
---

<Layout title={latestPost ? latestPost.data.title : "Blog"}>
  <div class="blog-layout">
    <main class="main-content">
      {latestPost ? (
        <article class="latest-post">
          <header>
            <h1>{latestPost.data.title}</h1>
            {latestPost.data.date && (
              <time datetime={latestPost.data.date}>
                {new Date(latestPost.data.date).toLocaleDateString('en-US', {
                  year: 'numeric',
                  month: 'long',
                  day: 'numeric'
                })}
              </time>
            )}
            {latestPost.data.tags && latestPost.data.tags.length > 0 && (
              <div class="tags">
                {latestPost.data.tags.map((tag: string) => (
                  <span class="tag">{tag}</span>
                ))}
              </div>
            )}
          </header>
          <div class="post-content">
            {LatestPostContent && <LatestPostContent />}
            {SignatureContent && (
              <div class="signature">
                <SignatureContent />
              </div>
            )}
          </div>
        </article>
      ) : (
        <p>No posts yet. Check back soon!</p>
      )}
    </main>
    
    <aside class="sidebar">
      <div class="portfolio-link">
        <a href="https://ajcampbell.info">‚Üê Back to AJ's Portfolio</a>
      </div>
      <h2>All Posts</h2>
      {allPosts.length > 0 ? (
        <ul class="post-list">
          {allPosts.map((post) => (
            <li>
              <a href={`${baseUrl}blog/${getPostSlug(post)}/`}>
                {post.data.title || post.slug}
              </a>
              {post.data.date && (
                <span class="post-date">
                  {new Date(post.data.date).toLocaleDateString('en-US', {
                    month: 'short',
                    day: 'numeric',
                    year: 'numeric'
                  })}
                </span>
              )}
            </li>
          ))}
        </ul>
      ) : (
        <p>No posts yet.</p>
      )}
    </aside>
  </div>
</Layout>

<style>
  .blog-layout {
    display: grid;
    grid-template-columns: 2fr 1fr;
    gap: 2rem;
    max-width: 2400px;
    margin: 0 auto;
    padding: 2rem;
  }
  
  @media (max-width: 768px) {
    .blog-layout {
      grid-template-columns: 1fr;
    }
  }
  
  .main-content {
    min-width: 0; /* Prevents grid overflow */
  }
  
  /* Hide the first h1 in post content (duplicate of header title) */
  .post-content :global(h1:first-of-type) {
    display: none;
  }
  
  .latest-post {
    background: #fff;
    padding: 2rem;
    border-radius: 8px;
    box-shadow: 0 2px 8px rgba(0,0,0,0.1);
  }
  
  .latest-post header {
    margin-bottom: 1.5rem;
    padding-bottom: 1rem;
    border-bottom: 2px solid #e0e0e0;
  }
  
  .latest-post h1 {
    margin: 0 0 0.5rem 0;
    font-size: 2rem;
  }
  
  .latest-post time {
    color: #666;
    font-size: 0.9em;
    display: block;
    margin-bottom: 0.5rem;
  }
  
  .tags {
    display: flex;
    gap: 0.5rem;
    flex-wrap: wrap;
    margin-top: 0.5rem;
  }
  
  .tag {
    background: #f0f0f0;
    padding: 0.25rem 0.75rem;
    border-radius: 12px;
    font-size: 0.85em;
    color: #555;
  }
  
  .read-more {
    display: inline-block;
    margin-top: 1rem;
    color: #0066cc;
    text-decoration: none;
    font-weight: 500;
  }
  
  .read-more:hover {
    text-decoration: underline;
  }
  
  .sidebar {
    background: #f9f9f9;
    padding: 1.5rem;
    border-radius: 8px;
    height: fit-content;
    position: sticky;
    top: 2rem;
  }
  
  .portfolio-link {
    margin-bottom: 1.5rem;
    padding-bottom: 1rem;
    border-bottom: 1px solid #e0e0e0;
  }
  
  .portfolio-link a {
    color: #0066cc;
    text-decoration: none;
    font-size: 0.95em;
    font-weight: 500;
    display: inline-block;
  }
  
  .portfolio-link a:hover {
    text-decoration: underline;
    color: #0052a3;
  }
  
  .sidebar h2 {
    margin-top: 0;
    font-size: 1.25rem;
    border-bottom: 2px solid #e0e0e0;
    padding-bottom: 0.5rem;
  }
  
  .post-list {
    list-style: none;
    padding: 0;
    margin: 0;
  }
  
  .post-list li {
    margin-bottom: 1rem;
    padding-bottom: 1rem;
    border-bottom: 1px solid #e0e0e0;
  }
  
  .post-list li:last-child {
    border-bottom: none;
    margin-bottom: 0;
    padding-bottom: 0;
  }
  
  .post-list a {
    display: block;
    color: #333;
    text-decoration: none;
    font-weight: 500;
    margin-bottom: 0.25rem;
  }
  
  .post-list a:hover {
    color: #0066cc;
    text-decoration: underline;
  }
  
  .post-date {
    display: block;
    color: #666;
    font-size: 0.85em;
  }
  
  .signature {
    margin-top: 2rem;
    padding-top: 1.5rem;
    border-top: 1px solid #e0e0e0;
    color: #666;
    font-style: italic;
  }
</style>
