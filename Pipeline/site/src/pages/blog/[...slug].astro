---
import { getCollection } from 'astro:content';
import Layout from '../../layouts/Layout.astro';

// Get base URL for links (handles GitHub Pages subdirectory)
const baseUrl = import.meta.env.BASE_URL;

/**
 * Get the URL slug for a post
 * Uses custom urlSlug from frontmatter if provided, otherwise generates from title
 */
function getPostSlug(post) {
  if (post.data.urlSlug) {
    return post.data.urlSlug;
  }
  // Generate slug from title
  const title = post.data.title || post.slug;
  return title
    .toLowerCase()
    .trim()
    .replace(/[\s_]+/g, '-')
    .replace(/[^a-z0-9-]/g, '')
    .replace(/-+/g, '-')
    .replace(/^-+|-+$/g, '');
}

export async function getStaticPaths() {
  const posts = await getCollection('blog');
  return posts.map((post) => {
    const urlSlug = getPostSlug(post);
    return {
      params: { slug: urlSlug },
      props: { post, urlSlug },
    };
  });
}

interface Props {
  post: any;
  urlSlug: string;
}

const { post, urlSlug } = Astro.props;
const { Content } = await post.render();

// Get all posts for sidebar
const allPosts = await getCollection('blog');
allPosts.sort((a, b) => {
  const dateA = new Date(a.data.date || 0);
  const dateB = new Date(b.data.date || 0);
  return dateB.getTime() - dateA.getTime();
});

// Helper function to get post slug (needed in template)
function getPostSlugForTemplate(post) {
  if (post.data.urlSlug) {
    return post.data.urlSlug;
  }
  // Generate slug from title
  const title = post.data.title || post.slug;
  return title
    .toLowerCase()
    .trim()
    .replace(/[\s_]+/g, '-')
    .replace(/[^a-z0-9-]/g, '')
    .replace(/-+/g, '-')
    .replace(/^-+|-+$/g, '');
}

